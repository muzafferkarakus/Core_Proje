@using EntityLayer.Concrate
@model List<Contact>
<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    @foreach (var item in Model)
    {
        <div class="mt-3 px-1">
            <div class="h5">Size yardım etmeye Hazırım!</div>
            <p>@item.Description</p>
            <p>Veya e-postamı veya iletişim numaramı kullanarak iletişime geçin.</p>
            <p>Görüşmek Üzere!</p>
        </div>
        <div class="mt-53 px-1">
            <div class="row">
                <div class="col-sm-2">
                    <div class="pb-1">E-Posta:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.Mail</div>
                </div>
                <div class="col-sm-2">
                    <div class="pb-1">Telefon:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.PhoneNumber</div>
                </div>
            </div>
        </div>
    }
</div>