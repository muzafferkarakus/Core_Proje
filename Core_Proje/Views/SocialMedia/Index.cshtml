@using EntityLayer.Concrate
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Sosyal Medya Adı</th>
                            <th scope="col" class="sort" data-sort="status">Url</th>
                            <th scope="col" class="sort" data-sort="status">İkon</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th> @count</th>
                                <td>@item.Name</td>
                                <td>@item.Url</td>
                                <td>@item.Icon</td>
                                <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/SocialMedia/EditSocialMedia/@item.SocialMediaId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/SocialMedia/AddSocialMedia/" class="btn btn-primary">Yeni Yetenek Ekle</a>
            </div>
        </div>
    </div>
</div>

